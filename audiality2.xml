			<item> end </item>
			<item> return </item>
			<item> run </item>
			<item> wait </item>
			<item> sleep </item>
			<item> wake </item>
			<item> force </item>
			<item> jump </item>
			<item> loop </item>
			<item> jz </item>
			<item> jnz </item>
			<item> jg </item>
			<item> jl </item>
			<item> jge </item>
			<item> jle </item>
			<item> if </item>
			<item> ifz </item>
			<item> ifl </item>
			<item> ifg </item>
			<item> ifle </item>
			<item> ifge </item>
			<item> for </item>
			<item> else </item>
			<item> while </item>
			<item> wz </item>
			<item> wl </item>
