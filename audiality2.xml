<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language name="Audiality 2" version="1.0" kateversion="2.1" section="Other" extensions="*.a2s" mimetype="text/x-audiality2script">
	<highlighting>
