// Play specified wave with simple envelope (for rendertest.c)
PlayTestWave(P V=1 W=sine)
{
	struct { wtosc; panmix }
	w W; p P
	a V; d 10
	end
.rel	a 0; d 500
	1() { force rel }
}

// Play specified wave with simple envelope (for waveupload.c)
PlayTestWave2(P V=1 W=sine)
{
	struct { wtosc; panmix }
	w W; p P
	a V; set a
	end
.rel	a 0; d 100
	1() { force rel }
}

// Play specified wave - no messages (for wavestress.c)
PlayTestWave3(P V=1 W=sine)
{
	struct { wtosc; panmix }
	w W; p P
	a V; set a
	d 100
	a 0; d 100
}

// Simple "instrument" for voicestress.c
PlayTestNote(P V=1)
{
	struct { wtosc; panmix }
	w triangle; p P
	a V; set a
	while a > 0.01 {
		*a .8; d 10
	}
	end
.rel	a 0; d 10
	1() { force rel }
}

// Streaming voice program for streamstress.c
StreamVoice(V=1 Pan Dur)
{
	struct { wtosc; xinsert; panmix }
w triangle; a .1; set a
	pan Pan
	vol V; d (Dur / 2)
	vol 0; d (Dur / 2)
}
